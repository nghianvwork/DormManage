<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.html</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/405.html</location>
    </error-page>
    <servlet>
        <servlet-name>EmptyRoom</servlet-name>
        <servlet-class>controller.EmptyRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmptyRooms</servlet-name>
        <servlet-class>controller.EmptyRooms</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmptyRoom</servlet-name>
        <url-pattern>/emptyRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmptyRooms</servlet-name>
        <url-pattern>/emptyRooms</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
