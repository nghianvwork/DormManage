<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.html</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/405.html</location>
    </error-page>
    <servlet>
        <servlet-name>EmptyRoom</servlet-name>
        <servlet-class>controller.EmptyRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmptyRooms</servlet-name>
        <servlet-class>controller.EmptyRooms</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserBillServlet</servlet-name>
        <servlet-class>controller.UserBillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserBill</servlet-name>
        <servlet-class>controller.UserBill</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentHistory</servlet-name>
        <servlet-class>controller.PaymentHistory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePayment</servlet-name>
        <servlet-class>controller.UpdatePayment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentUser</servlet-name>
        <servlet-class>controller.PaymentUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPaymentHistory</servlet-name>
        <servlet-class>controller.AdminPaymentHistory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentHistoryAdmin</servlet-name>
        <servlet-class>controller.PaymentHistoryAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmptyRoom</servlet-name>
        <url-pattern>/emptyRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmptyRooms</servlet-name>
        <url-pattern>/emptyRooms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserBill</servlet-name>
        <url-pattern>/userBill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentHistory</servlet-name>
        <url-pattern>/paymentHistory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePayment</servlet-name>
        <url-pattern>/updatePayment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentUser</servlet-name>
        <url-pattern>/paymentUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPaymentHistory</servlet-name>
        <url-pattern>/admin/payment-history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentHistoryAdmin</servlet-name>
        <url-pattern>/paymentHistoryAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
